{
    "name": "generator-fabric",
    "version": "0.0.34",
    "description": "Yeoman generator for Hyperledger Fabric",
    "main": "generators/app/index.js",
    "scripts": {
        "lint": "eslint .",
        "pretest": "npm run lint",
        "test": "nyc mocha --recursive",
        "prepublishOnly": "npm prune --production && rimraf package-lock.json && npm shrinkwrap"
    },
    "files": [
        "generators",
        "npm-shrinkwrap.json"
    ],
    "keywords": [
        "yeoman-generator"
    ],
    "author": "Simon Stone",
    "license": "Apache-2.0",
    "dependencies": {
        "camelcase": "^5.3.1",
        "decamelize": "^3.2.0",
        "find-free-port": "^2.0.0",
        "gradle-to-js": "^1.2.1",
        "yeoman-generator": "^2.0.5"
    },
    "devDependencies": {
        "chai": "^4.1.2",
        "chai-as-promised": "^7.1.1",
        "eslint": "^5.15.3",
        "mocha": "^5.2.0",
        "nyc": "^14.0.0",
        "rimraf": "^2.6.3",
        "sinon": "^6.3.4",
        "sinon-chai": "^3.2.0",
        "yeoman-assert": "^3.1.1",
        "yeoman-test": "^1.7.2"
    },
    "nyc": {
        "exclude": [
            ".eslintrc.js",
            "coverage/**",
            "generators/**/templates/**",
            "test/**",
            "tmp/**"
        ],
        "reporter": [
            "text-summary",
            "html"
        ],
        "all": true,
        "check-coverage": true,
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
    },
    "contractLanguages": [
        "JavaScript",
        "TypeScript",
        "Java"
    ],
    "chaincodeLanguages": [
        "Go",
        "Java",
        "JavaScript",
        "TypeScript"
    ]
}
