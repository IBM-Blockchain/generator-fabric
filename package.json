{
    "name": "generator-fabric",
    "version": "0.2.27",
    "description": "Yeoman generator for Hyperledger Fabric",
    "main": "generators/app/index.js",
    "scripts": {
        "lint": "eslint .",
        "pretest": "npm run lint",
        "test": "nyc mocha -t 3000 --recursive",
        "prepublishOnly": "rimraf package-lock.json && npm prune --production && npm shrinkwrap"
    },
    "files": [
        "generators",
        "npm-shrinkwrap.json"
    ],
    "keywords": [
        "yeoman-generator"
    ],
    "author": "Simon Stone",
    "license": "Apache-2.0",
    "dependencies": {
        "camelcase": "^6.0.0",
        "decamelize": "^4.0.0",
        "find-free-port": "^2.0.0",
        "gradle-to-js": "^2.0.0",
        "yeoman-generator": "^4.10.1"
    },
    "devDependencies": {
        "chai": "^4.2.0",
        "chai-as-promised": "^7.1.1",
        "chai-subset": "^1.6.0",
        "eslint": "^7.21.0",
        "js-yaml": "^4.1.0",
        "mocha": "^9.1.1",
        "nyc": "^15.0.0",
        "rimraf": "^3.0.2",
        "sinon": "^10.0.0",
        "sinon-chai": "^3.5.0",
        "yeoman-assert": "^3.1.1",
        "yeoman-test": "^4.0.2"
    },
    "nyc": {
        "exclude": [
            ".eslintrc.js",
            "coverage/**",
            "generators/**/templates/**",
            "test/**",
            "tmp/**"
        ],
        "reporter": [
            "text-summary",
            "html"
        ],
        "all": true,
        "check-coverage": true,
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
    },
    "contractLanguages": [
        "Go",
        "Java",
        "JavaScript",
        "TypeScript"
    ],
    "chaincodeLanguages": [
        "Go",
        "Java",
        "JavaScript",
        "TypeScript"
    ]
}
