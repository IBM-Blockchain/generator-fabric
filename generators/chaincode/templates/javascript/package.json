{
  "name": "<%= name %>",
  "version": "<%= version %>",
  "description": "<%= description %>",
  "main": "index.js",
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "nyc mocha --recursive",
    "start": "node lib/start.js"
  },
  "engineStrict": true,
  "author": "<%= author %>",
  "license": "<%= license %>",
  "dependencies": {
    "fabric-shim": "^2.4.1"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^8.7.0",
    "mocha": "^9.2.0",
    "nyc": "^15.1.0",
    "sinon": "^9.0.1",
    "sinon-chai": "^3.5.0"
  },
  "nyc": {
    "exclude": [
      ".eslintrc.js",
      "coverage/**",
      "test/**"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "all": true,
    "check-coverage": true,
    "statements": 100,
    "branches": 100,
    "functions": 100,
    "lines": 100
  }
}
