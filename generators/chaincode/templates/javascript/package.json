{
    "name": "<%= name %>",
    "version": "<%= version %>",
    "description": "<%= description %>",
    "engines": {
        "node": ">=8",
        "npm": ">=5"
    },
    "scripts": {
        "lint": "eslint .",
        "pretest": "npm run lint",
        "test": "nyc mocha --recursive",
        "start": "node lib/start.js"
    },
    "engineStrict": true,
    "author": "<%= author %>",
    "license": "<%= license %>",
    "dependencies": {
        "fabric-shim": "unstable"
    },
    "devDependencies": {
        "chai": "^4.1.2",
        "eslint": "^4.19.1",
        "mocha": "^5.2.0",
        "nyc": "^12.0.2",
        "sinon": "^6.0.0",
        "sinon-chai": "^3.2.0"
    },
    "nyc": {
        "exclude": [
          "coverage/**",
          "test/**"
        ],
        "reporter": [
          "text-summary",
          "html"
        ],
        "all": true,
        "check-coverage": true,
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
    }
}
